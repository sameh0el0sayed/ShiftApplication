@model IEnumerable<ShiftApplication.Models.Shift>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Shift Dashboard";
    Layout = "_Layout";
}

<div class="container py-4">
     
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Shift Dashboard</h2>

        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> New Shift
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Start</th>
                        <th>Supervisor</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shift in Model)
                    {
                        <tr>
                            <td>@shift.StartTime.ToString("dd MMM yyyy, hh:mm tt")</td>
                            <td>@(shift.Supervisor?.UserName ?? "-")</td>
                            <td>
                                @if (shift.IsClosed)
                                {
                                    <span class="badge bg-danger">Closed</span>
                                }
                                else if (shift.IsClaimed)
                                {
                                    <span class="badge bg-warning text-dark">Claimed</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Open</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (!shift.IsClaimed)
                                {
                                    <a asp-action="Claim" asp-route-id="@shift.Id" class="btn btn-sm btn-primary">Claim</a>
                                }
                                else if (!shift.IsClosed)
                                {
                                    <a asp-action="Log" asp-route-shiftId="@shift.Id" class="btn btn-sm btn-outline-secondary">Log</a>
                                    <form asp-action="Close" asp-route-id="@shift.Id" method="post" class="d-inline">
                                        <button class="btn btn-sm btn-danger">Close</button>
                                    </form>
                                }
                                else
                                {
                                    <a asp-action="Report" asp-route-id="@shift.Id" class="btn btn-sm btn-outline-dark">Report</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
