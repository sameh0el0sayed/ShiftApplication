@model ShiftApplication.ViewModels.ShiftClaimViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Claim Shift";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Claim Shift</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong>Shift Start:</strong>
                        @Model.StartTime.ToString("dd MMM yyyy, hh:mm tt")
                    </p>

                    <form asp-action="Claim" method="post">
                        <input type="hidden" asp-for="ShiftId" />
                        <button class="btn btn-success w-100">Confirm Claim</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
