@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ShiftApplication.ViewModels.CreateShiftViewModel
@{
    ViewData["Title"] = "Create Shift";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Create New Shift</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label"></label>
                            <input asp-for="StartTime"
                                   type="datetime-local"
                                   class="form-control"
                                   value="@Model.StartTime.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>


                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type ="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Create Shift
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
